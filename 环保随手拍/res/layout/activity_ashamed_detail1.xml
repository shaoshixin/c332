<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutOLI"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE4D6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/messager_send_button"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp" >

        <!-- 用户头像名称 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/Detail_UserHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_my_pre" />

            <TextView
                android:id="@+id/Detail_UserNameID"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.75"
                android:text="UserName"
                android:textColor="#815F3D"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bttonAdd"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/lot" />
        </LinearLayout>

        <TextView
            android:id="@+id/Detail_MainTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="发表一下自己的看法吧.."
            android:textSize="20sp" />
        <!-- 背景图 -->

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/Detail_MainImgID"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.22" />

        <TextView
            android:id="@+id/xiangxitext"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="0.69"
            android:background="@drawable/messager1"
            android:paddingRight="20dp"
            android:text="详细地址"
            android:paddingLeft="20dp"
            android:textColor="#815F3D"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/zanq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.11" >

                <Button
                    android:id="@+id/Detail_Down_ImgID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/cai"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/Detail_Down_textID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Detail_Down_ImgID"
                    android:layout_centerHorizontal="true"
                    android:text="踩"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ping"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.14" >

                <Button
                    android:id="@+id/pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/masage1"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/tv_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pinglun"
                    android:layout_centerHorizontal="true"
                    android:text="评论"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/jubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.05" >

                <Button
                    android:id="@+id/jubaodh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/jubao"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/tv_myspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jubaodh"
                    android:layout_centerHorizontal="true"
                    android:text="举报"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sharewindows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.09" >

                <Button
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                     android:layout_alignParentTop="true"
                    android:contentDescription="@null"
                    android:background="@drawable/share" />

                <TextView
                    android:id="@+id/fenx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/share"
                    android:layout_centerHorizontal="true"
                    android:text="分享"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>