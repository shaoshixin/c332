<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutOLI"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDE4D6"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants" 
    >
    

   

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
              >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="311dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/messager_send_button"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp" >
<!-- 用户头像名称 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/Detail_UserHead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_my_pre" />

                    <TextView
                        android:id="@+id/Detail_UserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="UserName"
                        android:textColor="#815F3D"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="记录的时间。。。"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/Detail_MainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="发表一下自己的看法吧.."
                    android:textSize="18sp" />
<!--背景图  -->

                <ImageView
                    android:id="@+id/Detail_MainImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.23" />

                   <!--  android:src="@drawable/default_content_pic" -->
                     

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp" >
<!-- 评论点赞处 -->

                    <ImageView
                        android:id="@+id/Detail_Down1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/cai"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                         />
                    <TextView
                            android:id="@+id/Detail_Down_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/Detail_Down1"
                            android:layout_centerVertical="true"
                            android:text="9999"
                            android:textSize="18sp" />

                    <Button
                        android:id="@+id/share"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_alignBottom="@+id/Detail_Down_text"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/Detail_Down_text"
                        android:background="@drawable/icon_fav_enable"
                        android:textSize="18sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    

</LinearLayout>